{
  "name": "sort-system",
  "version": "1.0.0",
  "description": "Comprehensive file organization system for projects, finances, and task management",
  "main": "index.js",
  "scripts": {
    "dev": "next dev --turbo false",
    "dev:host": "next dev -H 0.0.0.0 -p 3000",
    "dev:3001": "next dev -H 0.0.0.0 -p 3001",
    "build": "NEXT_DISABLE_SWC_NATIVE=1 NODE_OPTIONS=--max-old-space-size=512 next build --no-lint",
    "start": "next start -H 0.0.0.0 -p $PORT",
    "lint": "next lint",
    "api": "node server/api.js"
  },
  "engines": {
    "node": "18.x"
  },
  "heroku-postbuild": "npm run build",
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.0",
    "fs-extra": "^11.1.0",
    "lucide-react": "^0.292.0",
    "mime-types": "^2.1.0",
    "next": "13.5.6",
    "nodemailer": "^7.0.9",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sqlite3": "^5.1.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^3.0.1",
    "@types/nodemailer": "^7.0.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "13.5.6"
  }
}
